@model List<hamko.Models.Sales>

@{
    ViewData["Title"] = "List of Sales";
}

<h2 class="text-center mb-5">List of Sales</h2>

<div class="row mb-4">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Sales" asp-action="Create">Add New Sale</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Invoice No</th>
            <th>Ref No</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.InvoiceNo</td>
                <td>@sale.RefNo</td>
                <td>@sale.Date.ToString("MMMM d, yyyy")</td>
                <td>@sale.Status</td>
                <td>
                    <a href="/Sales/Details/@sale.Id" class="btn btn-sm btn-success">View</a>
                    <a href="/Sales/Edit/@sale.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Sales/Delete/@sale.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
