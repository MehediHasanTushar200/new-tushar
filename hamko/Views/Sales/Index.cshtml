@model SalesListViewModel

<h2>Sales List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Invoice No</th>
            <th>Ref No</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.InvoiceNo</td>
                <td>@sale.RefNo</td>
                <td>@sale.Date.ToString("MMMM d, yyyy")</td>
                <td>@sale.Status</td>
                <td>
                    <a href="/Sales/Details/@sale.Id" class="btn btn-sm btn-success">View</a>
                    <a href="/Sales/Edit/@sale.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Sales/Delete/@sale.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    int currentPage = Model.PageNumber;
    int totalPages = Model.TotalPages;
    bool hasPreviousPage = currentPage > 1;
    bool hasNextPage = currentPage < totalPages;
    int windowSize = 10; // পেজ লিঙ্ক কয়টি দেখাবে
    int currentWindowStart = ((currentPage - 1) / windowSize) * windowSize + 1;
    int currentWindowEnd = Math.Min(currentWindowStart + windowSize - 1, totalPages);
    int previousWindowStart = Math.Max(currentWindowStart - windowSize, 1);
    int nextWindowStart = currentWindowEnd + 1;
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        <li class="page-item @(hasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Previous</a>
        </li>

        @* << Previous Window *@
        @if (currentWindowStart > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@previousWindowStart">«</a>
            </li>
        }

        @* Windowed page numbers *@
        @for (int i = currentWindowStart; i <= currentWindowEnd; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                @if (i == currentPage)
                {
                    <span class="page-link">@i</span>
                }
                else
                {
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                }
            </li>
        }

        @* Next Window >> *@
        @if (currentWindowEnd < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@nextWindowStart">»</a>
            </li>
        }

        <li class="page-item @(hasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>

