@model Item
@{
    ViewData["Title"] = "Edit Item";
}

<h2>Edit Item</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GroupId">Group</label>
        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId">
            <option value="">-- Select Group --</option>
        </select>
        <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Name" width="100" />
        }
        else
        {
            <span>No Image</span>
        }
    </div>

    <div class="form-group">
        <label asp-for="Image">Change Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
