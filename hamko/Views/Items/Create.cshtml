@model Item

<h2>@ViewData["Title"] Item</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" width="80" />
        }
    </div>
    <div class="form-group">
        <label asp-for="GroupId">Group</label>
        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
