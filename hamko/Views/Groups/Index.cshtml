@model IEnumerable<Group>
@{
    ViewData["Title"] = "Groups";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h2>Groups</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Group</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent Group</th>
            <th>Image</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@(group.Parent != null ? group.Parent.Name : "-")</td>
                <td>
                    @if (!string.IsNullOrEmpty(group.Image))
                    {
                        <img src="@group.Image" alt="@group.Name" width="60" />
                    }
                </td>
                <td>@(group.Status ? "Active" : "Inactive")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
