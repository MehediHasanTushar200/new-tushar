@model Group

@{
    ViewData["Title"] = "Delete Group";
}

<h2>Delete Group</h2>

<h3>Are you sure you want to delete this group?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Parent Group</dt>
        <dd class="col-sm-10">@(Model.Parent?.Name ?? "No Parent")</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Name" style="max-width:150px; max-height:150px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.Status ? "Active" : "Inactive")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
